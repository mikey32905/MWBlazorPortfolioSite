<Window x:Class="CloneHunter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloneHunter"
        mc:Ignorable="d"
        Title="Clone Hunter" 
        WindowStartupLocation="CenterScreen"
        Height="600" Width="900">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!--Top Panel -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Label Content="Path:" VerticalAlignment="Center"/>
            <TextBox x:Name="PathTextBox" Width="500" Margin="0,0,10,0" IsReadOnly="True" VerticalAlignment="Center" Text="{Binding SelectedFolderPath}"/>
            <Button  x:Name="buttonBrowseFolder" Content="Browse Folder" Width="100" Margin="0,0,10,0" Click="buttonBrowseFolder_Click"/>
            <Button x:Name="ScanButton" Content="Scan" Width="80" IsEnabled="{Binding IsScanButtonEnabled}"  Click="ScanButton_Click"/>
        </StackPanel>

        <!-- Results Area -->
        <ScrollViewer Grid.Row="1" Margin="10">
            <ItemsControl x:Name="DuplicatesItemsControl" ItemsSource="{Binding DuplicateGroups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="{Binding Header}" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ItemsControl ItemsSource="{Binding Files}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="20,2,0,2">
                                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding FullPath}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

       
        <!-- Bottom Panel -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
            <Label x:Name="StatusLabel" Content="{Binding StatusLabelText}" Margin="0,0,20,0"/>
            <Button x:Name="buttonDelete" Content="Delete Selected" Width="120" Click="buttonDelete_Click"/>
        </StackPanel>
    </Grid>
</Window>
